{
  "compilerOptions": {
    "target": "es2019",
    "module":"es2015",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "cloud/*": ["generated/yandex/cloud/*"],
      "src/*": ["src/*"]
    }
  },

  "include": ["src", "generated", "api"],
  "exclude": ["node_modules", "**/__tests__/*"]
}